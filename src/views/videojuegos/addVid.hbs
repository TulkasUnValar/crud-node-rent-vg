<div class="conatiner p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3 class="text-uppercase">CREAR NUEVO VÍDEOJUEGO</h3>
        </div>
        <div class="card-body">
          <form action="/addVid" method="post">
            <div class="input-group mt-2">
              <label for="cod" class="input-group-text">Código</label>
              <input
                class="form-control"
                type="number"
                name="cod"
                id="cod"
                placeholder="0"
                autofocus
                required
              />
            </div>
            <div class="input-group mt-2">
              <label
                for="videogame_name"
                class="input-group-text"
              >Nombre</label>
              <input
                class="form-control"
                type="text"
                name="videogame_name"
                id="videogame_name"
                placeholder="Ejemplo: Paper Mario"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="year" class="input-group-text">Año</label>
              <input
                class="form-control"
                type="number"
                name="year"
                id="year"
                placeholder="Ejemplo: 1980"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="platform" class="input-group-text">Plataforma</label>
              <input
                class="form-control"
                type="text"
                name="platform"
                id="platform"
                placeholder="0"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="producer" class="input-group-text">Productor</label>
              <input
                class="form-control"
                type="text"
                name="producer"
                id="producer"
                placeholder="Nintendo"
                required
              />
            </div>
            <div class="input-group mt-2">
              <label for="director" class="input-group-text">Director</label>
              <input
                class="form-control"
                type="text"
                name="director"
                id="director"
                placeholder="Ejemplo: Yoshio Sakamoto"
                required
              />
            </div>
            <div class="form-group mt-4 d-grid gap-2">
              <button class="btn btn-success"> Crear</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>