<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de vídeojuegos</h3>
        {{#if videojuegos}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">Código</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Año</th>
                        <th scope="col">Plataforma</th>
                        <th scope="col">Productor</th>
                        <th scope="col">Director</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each videojuegos}}
                        <tr>
                            <td>{{cod}}</td>
                            <td>{{videogame_name}}</td>
                            <td>{{year}}</td>
                            <td>{{platform}}</td>
                            <td>{{producer}}</td>
                            <td>{{director}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/editVid/{{cod}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/delete/{{cod}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="7">REGISTRO DE VÍDEOJUEGOS</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear un vídeojuego</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar un vídeojuego en la aplicacion</p>
                    <a href="#" class="btn btn-primary">Ir a crear</a>
                </div>
        {{/if}}
    </div>
</div>